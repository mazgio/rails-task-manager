<h1>Update a Task</h1>
<div class="mt-5 d-flex flex-column align-items-center">
  <%= form_with model: @task do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :details %>
<%= f.text_field :details %>
<%= f.label :completed %>
<%= f.check_box :completed %>
<%= f.submit %>
<%= link_to "Back to list", tasks_path %>
<% end %>
</div>
